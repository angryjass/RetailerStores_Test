@page
@model StoresModel
@{
    ViewData["Title"] = "Stores";
}

<div>
    <a class="btn btn-primary" asp-page="./CreateStore">Create Store</a>
    <a class="btn btn-secondary" asp-page="./CreateStock">Add Stock Info</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Stores[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stores[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stores[0].CountryCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stores[0].StoreEmail)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Stores)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreEmail)
                    </td>
                    <td>
                        <a asp-page="./StoreDetail" asp-route-id="@item.Id" class="bi bi-search"></a>
                        <a asp-page="./EditStore" asp-route-id="@item.Id" class="bi bi-pen"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>